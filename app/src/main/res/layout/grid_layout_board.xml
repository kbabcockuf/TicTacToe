<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:alignmentMode="alignBounds"
    app:columnCount="5"
    app:rowCount="5"
    app:useDefaultMargins="false">

    <com.babcock.tictactoe.controls.TicTacToeTile
        android:id="@+id/vTile1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1" />

    <Space
        android:layout_height='0dp'
        android:layout_width="10px"
        app:layout_column="1"/>

    <com.babcock.tictactoe.controls.TicTacToeTile
        android:id="@+id/vTile2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1" />

    <Space
        android:layout_height='0dp'
        android:layout_width="10px"
        app:layout_column="3" />

    <com.babcock.tictactoe.controls.TicTacToeTile
        android:id="@+id/vTile3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1" />

    <Space
        android:layout_height='10px'
        android:layout_width="0dp"
        app:layout_row="1"
        app:layout_columnSpan="5" />

    <com.babcock.tictactoe.controls.TicTacToeTile
        android:id="@+id/vTile4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1" />

    <Space
        android:layout_height='0dp'
        android:layout_width="10px"
        app:layout_column="1" />

    <com.babcock.tictactoe.controls.TicTacToeTile
        android:id="@+id/vTile5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1" />

    <Space
        android:layout_height='0dp'
        android:layout_width="10px"
        app:layout_column="3" />

    <com.babcock.tictactoe.controls.TicTacToeTile
        android:id="@+id/vTile6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1" />

    <Space
        android:layout_height='10px'
        android:layout_width="0dp"
        app:layout_row="3"
        app:layout_columnSpan="5" />

    <com.babcock.tictactoe.controls.TicTacToeTile
        android:id="@+id/vTile7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1" />

    <Space
        android:layout_height='0dp'
        android:layout_width="10px"
        app:layout_column="1" />

    <com.babcock.tictactoe.controls.TicTacToeTile
        android:id="@+id/vTile8"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1" />

    <Space
        android:layout_height='0dp'
        android:layout_width="10px"
        app:layout_column="3" />

    <com.babcock.tictactoe.controls.TicTacToeTile
        android:id="@+id/vTile9"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        app:layout_columnWeight="1"
        app:layout_rowWeight="1" />

</android.support.v7.widget.GridLayout>
